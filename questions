def cost_function(x, y):
    if x < y:
        return x
    else:
        return cost_function(x // y, y) + x % y

def find_smallest_y(x, c):
    smallest_y = 2
    while smallest_y <= 2 * 10 ** 9:
        if cost_function(x, smallest_y) == c:
            return smallest_y
        smallest_y += 1
    return -1
